{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OpenPrefabJSON",
  "type": "object",
  "required": ["format", "version", "elementId", "classification", "physicalProperties", "project", "erpMappings", "metadata"],
  "properties": {
    "format": {
      "type": "string",
      "const": "OpenPrefabJSON"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "elementId": {
      "type": "string",
      "format": "uuid"
    },
    "classification": {
      "type": "object",
      "required": [ "type", "concreteQuality" ],
      "properties": {
        "type": {
          "type": "string",
          "description": "Main type of the concrete element (e.g., Slab, Wall, Stair)."
        },
        "subType": {
          "type": "string",
          "description": "Subtype such as HollowCoreSlab, Straight, HalfTurned etc."
        },
        "concreteQuality": {
          "type": "string",
          "description":  "Quality of the concrete"
        }
      }
    }
  }
}